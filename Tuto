<script>
  // Configuración: fecha objetivo (19 oct 2025 a las 00:00:00)
  const objetivo = new Date("Oct 19, 2025 00:00:00").getTime();

  // Elementos
  const dEl = document.getElementById('d');
  const hEl = document.getElementById('h');
  const mEl = document.getElementById('m');
  const sEl = document.getElementById('s');
  const counterBox = document.getElementById('counterBox');
  const counterLabel = document.getElementById('counterLabel');
  const toggleAudioBtn = document.getElementById('toggleAudio');
  const mainAudio = document.getElementById('mainAudio');
  const refVideo = document.getElementById('refVideo');

  // Sonido tic (opcional). Si no tienes archivo, crea tick.mp3 o coméntalo.
  const tick = new Audio("tick.mp3"); // <<< proporciona tick.mp3 o coméntalo si no lo tienes
  tick.volume = 0.7;

  // Intentar autoplay al cargar (muchos navegadores bloquean reproducción con sonido).
  window.addEventListener('load', () => {
    // reproducir en silencio primero para permitir autoplay en algunos navegadores
    if(mainAudio){
      mainAudio.muted = true;
      mainAudio.play().catch(()=>{/* autoplay bloqueado */});
    }
    // video intentar reproducir en mute (si hay video)
    if(refVideo){
      refVideo.play().catch(()=>{ /* bloqueo */ });
    }
  });

  // Toggle audio (usuario activa sonido)
  let audioOn = false;
  toggleAudioBtn.addEventListener('click', () => {
    audioOn = !audioOn;
    if(mainAudio){
      mainAudio.muted = !audioOn;
      if(audioOn){
        mainAudio.play().catch(()=>{/* bloqueo */});
        toggleAudioBtn.textContent = "Desactivar sonido";
      } else {
        toggleAudioBtn.textContent = "Activar sonido";
      }
    }
  });

  // Compartir (ejemplo simple; usa Web Share API si está disponible)
  document.getElementById('shareBtn').addEventListener('click', async () => {
    const shareData = {
      title: 'Participa: Jóvenes Profesionales por Oruro',
      text: 'Participa este 19 de octubre. Haz que tu voz cuente.',
      url: location.href
    };
    if(navigator.share){
      try { await navigator.share(shareData); }
      catch(err){ alert('No se pudo compartir: ' + err.message); }
    } else {
      // fallback simple: copiar URL al portapapeles
      try{
        await navigator.clipboard.writeText(location.href);
        alert('Enlace copiado al portapapeles. Compártelo con tus amigos.');
      } catch(e){
        alert('Comparte la URL manualmente: ' + location.href);
      }
    }
  });

  // Contador dinámico con efecto de urgencia y tic cuando falta < 10 días
  let ticPlaying = false;
  const updateCounter = () => {
    const now = Date.now();
    let dist = objetivo - now;

    if(dist <= 0){
      dEl.textContent = 0; hEl.textContent = 0; mEl.textContent = 0; sEl.textContent = 0;
      counterLabel.textContent = "¡Es el día!";
      counterBox.classList.add('urgent');
      // stop ticking
      if(tick && !tick.paused){ tick.pause(); tick.currentTime = 0; }
      return;
    }

    const dias = Math.floor(dist / (1000*60*60*24));
    const horas = Math.floor((dist % (1000*60*60*24)) / (1000*60*60));
    const minutos = Math.floor((dist % (1000*60*60)) / (1000*60));
    const segundos = Math.floor((dist % (1000*60)) / 1000);

    dEl.textContent = String(dias).padStart(2,'0');
    hEl.textContent = String(horas).padStart(2,'0');
    mEl.textContent = String(minutos).padStart(2,'0');
    sEl.textContent = String(segundos).padStart(2,'0');
    counterLabel.textContent = "Faltan";

    // Si quedan menos de 10 días, destaque visual y tic opcional
    if(dias < 10){
      counterBox.classList.add('urgent');
      // reproducir tic si usuario activó audio y tick existe
      if(audioOn && tick && typeof tick.play === 'function'){
        // reproducir tic cada segundo (si no está ya reproduciéndose)
        if(!ticPlaying){
          ticPlaying = true;
          // play a single tick each second via interval
          tick.play().catch(()=>{ /* bloqueo */ });
          // set short interval to replay tick each second:
          if(window._tickInterval) clearInterval(window._tickInterval);
          window._tickInterval = setInterval(()=>{
            tick.currentTime = 0;
            tick.play().catch(()=>{/* bloqueo */});
          }, 1000);
        }
      }
    } else {
      counterBox.classList.remove('urgent');
      if(window._tickInterval){ clearInterval(window._tickInterval); window._tickInterval = null; ticPlaying = false; }
      if(tick && !tick.paused){ tick.pause(); tick.currentTime = 0; }
    }
  };

  // Actualiza cada segundo
  updateCounter();
  setInterval(updateCounter, 1000);

  // Limpieza: pausar tick si el usuario navega fuera de la pestaña
  document.addEventListener('visibilitychange', () => {
    if(document.hidden){
      if(window._tickInterval){ clearInterval(window._tickInterval); window._tickInterval = null; }
      if(tick && !tick.paused){ tick.pause(); tick.currentTime = 0; ticPlaying = false; }
    } else {
      // re-evaluar (si audioOn y <10 días, se volverá a programar)
      updateCounter();
    }
  });
</script>
</body>
</html>